@using GridMvc.Html
@model WorldCup.Models.HomeViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <p class="lead">World Cup 2014</p>
    <p>Predictions</p>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Introduction</h2>
        <p>Welcome to the NIPO UNICEF World Cup Prediction website.</p>
        <h2>Users ranking / Registered</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th class="full-width">Name</th>
                    <th class="table-points">Points</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1.</td>
                    <td class="full-width">Babis</td>
                    <td class="table-points">90</td>
                </tr>
                <tr>
                    <td>2.</td>
                    <td class="full-width">Hakan</td>
                    <td class="table-points">85</td>
                </tr>
                <tr>
                    <td>3.</td>
                    <td class="full-width">Jeroen</td>
                    <td class="table-points">82</td>
                </tr>
            </tbody>
        </table>
</div>
    <div class="col-md-6">
        <h2>Upcoming matches</h2>
        @Html.Grid(Model.UpcomingMatches).Named("matches").Columns(columns =>
        {
            columns.Add(u => u.Id, true);
            // columns.Add().RenderValueAs(u => "<button type='button' class='btn btn-primary' value='" + u.Id + "'>Predict</button>");
            columns.Add(u => u.Date.Date).Titled("Date").SetWidth(30);
            columns.Add(m => m.Stage).Titled("Stage").SetWidth(10);
            columns.Add(u => u.HomeTeam.Name)
                .Encoded(false)
                .Sanitized(false)
                .RenderValueAs(u => Html.Partial("_FlaggedTeam", new[] { u.HomeTeam.Name, u.HomeTeam.Code }))
                .Titled("Home Team")
                .SetWidth(30);
            columns.Add(u => u.AwayTeam.Name)
                .Encoded(false)
                .Sanitized(false)
                .RenderValueAs(u => Html.Partial("_FlaggedTeam", new[] { u.AwayTeam.Name, u.AwayTeam.Code }))
                .Titled("Away Team")
                .SetWidth(30);
        })
    </div>
</div>